<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/startActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="@string/start_activity"
        app:layout_constraintBaseline_toBaselineOf="@+id/activityNameInput"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/endActivity"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginEnd="32dp"
        android:text="@string/stop_activity"
        app:layout_constraintBaseline_toBaselineOf="@+id/myChronometer"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/activityNameInput"
        android:layout_width="197dp"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="12dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/activity_name_hint"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/startActivity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activityNameShow"
        android:layout_width="183dp"
        android:layout_height="21dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myChronometer" />

    <TextView
        android:id="@+id/myChronometer"
        android:layout_width="245dp"
        android:layout_height="47dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="12dp"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/endActivity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="0dp"
        android:layout_height="207dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityNameShow"
        tools:context="com.github.studenttimetracker.MainActivity">

    </androidx.recyclerview.widget.RecyclerView>

    <Spinner
        android:id="@+id/activitySpinner"
        android:layout_width="139dp"
        android:layout_height="27dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endActivity" />

</androidx.constraintlayout.widget.ConstraintLayout>